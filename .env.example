# Docker Images - Set these to your registry paths
BACKEND_IMAGE=your-registry/demo-devops-backend:latest
FRONTEND_IMAGE=your-registry/demo-devops-frontend:latest

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
